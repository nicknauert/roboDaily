<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>{{name}}</title>
    <link rel="stylesheet" href="./styles.css">
  </head>
  <body>
    <main class="iDPage">
      <section class="idCont">
        <img src='{{avatar}}' alt="avatar">
        <h2>{{name}}</h2>
        <p>{{#address.city}}{{address.city}},{{/address.city}} {{address.country}} |
        {{#job}}{{job}}{{/job}}
          {{^job}}
            <p class="noJob">Currently Seeking Employment</p>
          {{/job}} {{#company}}{{company}}{{/company}}</p>
        <p>{{email}} | {{phone}}</p>

        <section class="bottom">
          <p><b>Education:<br>Skills:</b></p> <p>{{#university}}{{university}}<br>{{/university}} {{#skills}}{{.}}<br>{{/skills}}</p>
        </section>
      </section>

    </main>
  </body>
</html>
